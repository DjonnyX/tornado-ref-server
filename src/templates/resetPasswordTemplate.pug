                            tr(
                                style="padding-bottom:30px")
                                a(
                                    href='http://' + host + '/reset-password?token=' + token
                                    style="padding:10px;width:300px;display:block;text-decoration:none;border: 1px solid #435761;text-align:center;font-weight:bold;font-size:14px;font-family:'Open Sans',sans-serif;color:#ffffff;background: #435761;border-radius:5px;line-height:17px;margin:0 auto;"
                                    target="_blank"
                                ) Reset My Password
                            tr(
                                style="font-family:'Open Sans',sans-serif;font-size:13px;padding:0px 10px 0px 10px;text-align:left"
                                )
                                p If you need additional assistance, or you did not make this change, please contact
                                    a(
                                        href='mailto:' + helpEmail
                                        style="color: #d9ac00;text-decoration:underline;font-weight:bold;"
                                        target="_blank"
                                    ) #{helpEmail}
                                p Cheers,
                                br
                                p The Tornado Team
