{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "src/**/*Controller.ts"
  ],
  "spec": {
    "securityDefinitions": {
      "jwt": {
        "type": "apiKey",
        "name": "authorization",
        "in": "header"
      }
    },
    "basePath": "/api/v1",
    "outputDirectory": ".",
    "specVersion": 3,
    "tags": [
      {
        "name": "Tag",
        "description": "Operations about tags",
        "externalDocs": {
          "description": "Find out more about tags",
          "url": "http://swagger.io"
        }
      }
    ]
  },
  "routes": {
    "basePath": "/api/v1",
    "routesDir": "src",
    "authenticationModule": "./src/authentication.ts"
  }
}